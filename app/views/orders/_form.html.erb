<% if @cart.orderables.count > 0 %>
  <%= form_with(model: order) do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :amount, value: @cart.total %>
    <%= f.hidden_field :id, value: @cart.id %>
    <%= button_tag(type: 'submit', class: "w-50 btn btn-lg btn-primary bg-success border-success") do %>
      Confirm
    <% end %>
  <% end %>
<% end %>
