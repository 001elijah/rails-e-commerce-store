<p style="color: green"><%= notice %></p>

<div class="d-flex flex-row gap-4">
  <h1>Items</h1>
  <% if user_signed_in? %>
    <%= link_to new_item_path do%>
      <button type="button" class="btn btn-lg btn-block btn-primary mb-4">Add new item</button>
    <% end %>
  <% else %>
    <%= link_to new_user_session_path do%>
      <button type="button" class="btn btn-lg btn-block btn-primary mb-4">Add new item</button>
    <% end %>
  <% end %>
</div>

<div class="d-flex flex-wrap justify-content-center gap-4 mb-3 text-center" id="items">
  <% if Item.first.nil? %>
    <p>No items in the store. Admin can add new items.</p>
  <% else %>
    <% @items.each do |item| %>
      <%= render item %>
    <% end %>
  <% end %>
</div>

