<div class="my-3 d-flex flex-row gap-4 align-items-center">
  <h1 class="text-secondary">Items</h1>
  <% if user_signed_in? && current_user.role === 'admin' %>
    <%= link_to new_item_path do%>
      <button type="button" class="btn btn-sm btn-block btn-outline-primary">Add new</button>
    <% end %>
  <% end %>
</div>

<div class="d-flex flex-wrap justify-content-center gap-4 mb-3 text-center" id="items">
  <% if Item.first.nil? %>
    <p>No items in the store. Admin can add new items.</p>
  <% else %>
    <% @items.each do |item| %>
      <%= render item %>
    <% end %>
  <% end %>
</div>

